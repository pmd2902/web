@model IEnumerable<BaoCaoLTW.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
    }

    th {
        background-color: #2a9fd6;
        color: white;
    }
</style>
<h2>Quản Lý Sản Phẩm</h2>

<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Hình Ảnh</th>
        <th>Mã nhà sản xuất</th>
        <th>Tên nhà sản xuất</th>
        <th>Gía</th>
        <th>Số lượng</th>
        <th>Tình trạng</th>

        <th colspan="2">
            <a href="@Url.Action("Create","SanPhamAdmin")"><img src="~/Assets/images/AddNSX.png" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>@item.HinhAnh</td>
            <td>@item.MaNhaSX</td>
            <td>@item.TenNhaSX</td>
            <td>@item.Gia</td>
            <td>@item.SoLuong</td>
            <td>@item.TinhTrang</td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin",new { id = @item.MaSanPham})"> <img src="~/Assets/images/edit.png"></a> </td>
            <td><a href="@Url.Action("Delete","SanPhamAdmin",new { id = @item.MaSanPham})"> <img src="~/Assets/images/Delete.png" /></a> </td>
        </tr>
    }

</table>


