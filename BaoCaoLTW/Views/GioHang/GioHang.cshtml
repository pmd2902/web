@using BaoCaoLTW.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}     
            <h2 style="text-align: center">THÔNG TIN GIỎ HÀNG</h2>
            <table align="center" border="1">
                <tr style="text-align: center; font-weight: bold">
                    <td>Mã sản phẩm</td>
                    <td>Tên sản phẩm</td>
                    <td>Hình ảnh</td>
                    <td>Số Lượng</td>
                    <td>Giá</td>
                    <td>Thành tiền</td>
                    <td width="50px"></td>
                    <td width="50px"></td>
                    <td width="50px"></td>
                </tr>
                @foreach (var item in Model)
            {
                    <tr style="text-align:center; font-weight: bold">
                        <td>@item.sMaSanPham</td>
                        <td>@item.sTenSanPham</td>
                        <td><img style="max-height: 150px; max-width: 100px" src="~/Assets/user/img/@item.sHinhAnh" /> </td>
                        @using(Html.BeginForm("CapNhatGioHang","GioHang",new { @sMaSP = item.sMaSanPham }))
                        {                      
                        <td>
                            <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color": yellow" />
                        </td>
                        <td>@String.Format("{0:0,0}", item.iGia)</td>
                        <td>@String.Format("{0:0,0}", item.dThanhTien)</td>    
                        <td><a href="@Url.Action("Detail","Home", new { id = item.sMaSanPham })">Chi tiết</a></td>  
                        <td>@Html.ActionLink("Xóa","XoaGioHang",new { @sMaSP = item.sMaSanPham })</td>
                        <td><input type="submit" value="Cập Nhật" /></td>
                        }                                  
                    </tr>
                }
                <tr style="font-weight: bold; text-align: right; color: red">
                    <td colspan="4">Số lượng sản phẩm: @ViewBag.TongSoLuong</td>
                    <td colspan="4">Tổng tiền: @String.Format("{0:0,0}", ViewBag.TongTien) VNĐ<</td>
                </tr>
                <tr style="font-weight: bold; color: blue; text-align: right">
                    <td colspan="9">
                        @Html.ActionLink("Xóa giỏ hàng","XoaTatCaGioHang")
                    </td>
                </tr>

            </table>
        

