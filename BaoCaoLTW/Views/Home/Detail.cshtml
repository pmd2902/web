                        <div class="image">
                            <img src="~/Assets/user/img/@Model.HinhAnh" />                           
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="caption">
                            <div class="name"><h2>@Model.TenSanPham</h2></div>
                            <div class="info">
                                <ul>
                                    <li>Thương hiệu: @Model.TenNhaSX</li>
                                    <li>Mã sản phẩm: @Model.MaSanPham</li>
                                </ul>
                            </div>
                            <span>Giá: <span style="color:red; font-size: 25px;">@Model.Gia </span> VNĐ</span>                     
